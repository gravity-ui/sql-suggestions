{
  "extends": "@gravity-ui/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "checkJs": false,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
