{
  "extends": "@gravity-ui/tsconfig",
  "compilerOptions": {
    "module": "ES2022",
    "outDir": "dist",
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "checkJs": false,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/autocomplete/databases/clickhouse/tests/generated/**/*"]
}
